        {
            "matches": [
                "*://key-drop.com/*/empty"
            ],
            "js": [
                "js/empty.js"
            ]
        },
        {
            "matches": [
                "*://key-drop.com/*/giveaways",
                "*://key-drop.com/*/giveaways/list"
