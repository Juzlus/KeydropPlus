        {
            "matches": [
                "*://key-drop.com/*/case-battle/list*",
                "*://key-drop.com/*/case-battle*"
            ],
            "js": [
                "js/caseBattleButton.js"
            ]
        },
        {
            "matches": [
                "https://api.skinport.com/keydrop+?currency=*"
            ],
            "js": [
                "js/jquery/jquery-3.6.1.min.js",
